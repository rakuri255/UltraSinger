# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# File Storage
UPLOAD_DIR=/tmp/ultrasinger/uploads
OUTPUT_DIR=/tmp/ultrasinger/outputs
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Job Management
JOB_RETENTION_HOURS=24
MAX_CONCURRENT_JOBS=2

# UltraSinger Configuration
WHISPER_MODEL=medium  # tiny|small|medium|large-v2|large-v3
CREPE_MODEL=full      # tiny|small|medium|large|full
FORCE_CPU=false       # Set to true to disable GPU acceleration

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Frontend Configuration (for Vite build)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
